{
  "name": "cat",
  "version": "0.0.0",
  "description": "thecatapi.com app",
  "main": "dist/server/index.js",
  "watch": {
    "watch:server": {
      "patterns": [
        "server"
      ],
      "extensions": "js",
      "quiet": true,
      "runOnChangeOnly": true
    },
    "watch:client": {
      "patterns": [
        "client"
      ],
      "extensions": "js",
      "quiet": true,
      "runOnChangeOnly": true
    },
    "watch:styles": {
      "patterns": [
        "public"
      ],
      "extensions": "css",
      "quiet": true,
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "test": "cypress open",
    "clean": "echo 'ğŸ—‘ï¸ Cleaning dist' && rimraf dist",
    "copy": "cp-cli public dist",
    "cdn:build": "npm run buid:client && npm run copy",
    "babel:client": "babel client -d dist/server/views",
    "build:server": "echo 'ğŸ“¦ Building server files' && npm run babel:client && babel server -d dist/server",
    "build:client": "node -r @babel/register node_modules/.bin/webpack --config=webpack.config.js",
    "build": "npm run clean && npm run copy && npm run build:client && npm run build:server",
    "start": "node dist/server/index.js",
    "dev:client": "node -r @babel/register node_modules/.bin/webpack-dev-server --config=webpack.config.js",
    "dev": "npm run copy & npm run dev:client & npm run watch & npm run build:server && nodemon --watch dist/server dist/server",
    "watch:client": "npm run babel:client & npm run build:client",
    "watch:server": "npm run build:server",
    "watch:styles": "npm run copy",
    "watch": "npm-watch",
    "now-build": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djfrsn/cat.git"
  },
  "keywords": [
    "thecatapi.com",
    "cat",
    "cats",
    "kitty"
  ],
  "author": "Dennis Jefferson <dennismjefferson@gmail.com> (dennisjefferson.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/djfrsn/cat/issues"
  },
  "homepage": "https://cat.dennisjefferson.com",
  "dependencies": {
    "@babel/core": "^7.2.0",
    "@babel/register": "^7.0.0",
    "axios": "^0.18.0",
    "babel-runtime": "^6.26.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.4",
    "mongoose": "^5.3.16",
    "now-env": "^3.1.0",
    "passport": "^0.4.0",
    "passport-anonymous": "^1.0.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-saga": "^0.16.2",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "cp-cli": "^1.1.2",
    "dotenv": "^6.2.0",
    "nodemon": "^1.18.8",
    "npm-watch": "^0.5.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
